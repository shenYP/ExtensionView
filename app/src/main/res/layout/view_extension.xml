<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_contene"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipChildren="false">

    <com.example.user.myapplication.extension.RightExtensionLayoutView
        android:id="@+id/layout_right"
        android:layout_width="@dimen/px139"
        android:layout_height="@dimen/px370"
        android:layout_marginLeft="@dimen/px_negative_22"
        android:layout_toRightOf="@+id/layout_center3"
        android:nextFocusLeft="@+id/layout_center3"
        android:nextFocusUp="@+id/btn_recommend"
        app:angleSize="@dimen/px12"
        app:differenceWidth="@dimen/px32"
        app:maxWidth="@dimen/px669"
        app:minWidth="@dimen/px139">

        <ImageView
            android:layout_width="@dimen/px669"
            android:layout_height="@dimen/px370"
            android:scaleType="centerCrop"
            android:src="@drawable/extension_background" />

        <ImageView
            android:layout_width="@dimen/px360"
            android:layout_height="@dimen/px370"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/extension_person" />

    </com.example.user.myapplication.extension.RightExtensionLayoutView>

    <com.example.user.myapplication.extension.CenterExtensionLayoutView
        android:id="@+id/layout_center3"
        android:layout_width="@dimen/px139"
        android:layout_height="@dimen/px370"
        android:layout_marginLeft="@dimen/px_negative_22"
        android:layout_toRightOf="@+id/layout_center2"
        android:nextFocusLeft="@+id/layout_center2"
        android:nextFocusRight="@+id/layout_right"
        android:nextFocusUp="@+id/btn_recommend"
        app:angleSize="@dimen/px12"
        app:differenceWidth="@dimen/px32"
