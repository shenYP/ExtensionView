        <ImageView
            android:layout_width="@dimen/px669"
            android:layout_height="@dimen/px370"
            android:scaleType="centerCrop"
            android:src="@drawable/extension_background" />

        <ImageView
            android:layout_width="@dimen/px360"
            android:layout_height="@dimen/px370"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/extension_person" />

    </com.example.user.myapplication.extension.CenterExtensionLayoutView>


    <com.example.user.myapplication.extension.CenterExtensionLayoutView
        android:id="@+id/layout_center2"
        android:layout_width="@dimen/px139"
        android:layout_height="@dimen/px370"
        android:layout_marginLeft="@dimen/px_negative_22"
        android:layout_toRightOf="@+id/layout_center1"
        android:nextFocusLeft="@+id/layout_center1"
        android:nextFocusRight="@+id/layout_center3"
        android:nextFocusUp="@+id/btn_recommend"
        app:angleSize="@dimen/px12"
        app:differenceWidth="@dimen/px32"
        app:maxWidth="@dimen/px669"
        app:minWidth="@dimen/px139">

        <ImageView
            android:layout_width="@dimen/px669"
            android:layout_height="@dimen/px370"
            android:scaleType="centerCrop"
            android:src="@drawable/extension_background" />

        <ImageView
            android:layout_width="@dimen/px360"
            android:layout_height="@dimen/px370"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/extension_person" />

    </com.example.user.myapplication.extension.CenterExtensionLayoutView>

    <com.example.user.myapplication.extension.CenterExtensionLayoutView
        android:id="@+id/layout_center1"
        android:layout_width="@dimen/px139"
        android:layout_height="@dimen/px370"
        android:layout_marginLeft="@dimen/px_negative_22"
        android:layout_toRightOf="@+id/layout_left"
        android:nextFocusLeft="@+id/layout_left"
        android:nextFocusRight="@+id/layout_center2"
        android:nextFocusUp="@+id/btn_recommend"
        app:angleSize="@dimen/px12"
        app:differenceWidth="@dimen/px32"
        app:maxWidth="@dimen/px669"
        app:minWidth="@dimen/px139">

        <ImageView
            android:layout_width="@dimen/px669"
            android:layout_height="@dimen/px370"
            android:scaleType="centerCrop"
            android:src="@drawable/extension_background" />

        <ImageView
            android:layout_width="@dimen/px360"
            android:layout_height="@dimen/px370"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/extension_person" />

    </com.example.user.myapplication.extension.CenterExtensionLayoutView>

    <com.example.user.myapplication.extension.LeftExtensionLayoutView
        android:id="@+id/layout_left"
        android:layout_width="@dimen/px669"
        android:layout_height="@dimen/px370"
        android:nextFocusLeft="@+id/layout_left"
        android:nextFocusRight="@+id/layout_center1"
        android:nextFocusUp="@+id/btn_recommend"
        app:angleSize="@dimen/px12"
        app:differenceWidth="@dimen/px32"
        app:maxWidth="@dimen/px669"
        app:minWidth="@dimen/px139">

        <ImageView
            android:id="@+id/test1"
            android:layout_width="@dimen/px669"
            android:layout_height="@dimen/px370"
            android:scaleType="centerCrop"
            android:src="@drawable/extension_background" />

        <ImageView
            android:id="@+id/test2"
            android:layout_width="@dimen/px360"
            android:layout_height="@dimen/px370"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/extension_person" />

    </com.example.user.myapplication.extension.LeftExtensionLayoutView>

</RelativeLayout>